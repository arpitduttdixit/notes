{
  "manifest_version": 3,
  "name": "Mac Notes Search",
  "version": "1.0.0",
  "description": "Search and access your Mac Notes",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:8765/*",
    "https://claude.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "notes.png"
    }
  },
  "icons": {
    "16": "notes.png"
  }
}
