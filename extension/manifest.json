{
  "manifest_version": 3,
  "name": "Mac Notes Search",
  "version": "1.0.0",
  "description": "Search and access your Mac Notes",
  "permissions": ["tabs", "activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["http://localhost:8765/*", "https://claude.ai/*"],
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "notes.png"
    }
  },
  "icons": {
    "16": "notes.png"
  }
}
